<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag  'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag  'background', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag  'reviews', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag  'scaffolds', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
  <nav>
    <div class="nav-wrapper grey lighten-3">
      <div class="container"><a href="#!" class="brand-logo"><%= image_tag("logo.png", :alt => "home image", :width => 120) %></a></div>
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons text-black">menu</i></a>
      <div class="container">
        <ul class="right hide-on-med-and-down">
            <% if user_signed_in? %>
              <li><%= link_to 'Home', root_path %></li>
              <li><%= link_to 'All Reviews', reviews_path %></li>    
              <li><%= link_to 'New Review', new_review_path %></li>
              <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
            <% else %>
              <li><%= link_to 'Home', root_path %></li>
              <li><%= link_to 'All Reviews', reviews_path %></li>
              <li><%= link_to 'Log In', new_user_session_path %></li>
              <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <% end %>
        </ul>
      </div>
      <ul class="side-nav" id="mobile-demo">
            <% if user_signed_in? %>
              <li><%= link_to 'Home', root_path %></li>
              <li><%= link_to 'All Reviews', reviews_path %></li>    
              <li><%= link_to 'New Review', new_review_path %></li>
              <li><%= link_to 'My Reviews', reviews_path %></li>
              <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
            <% else %>
              <li><%= link_to 'Home', root_path %></li>
              <li><%= link_to 'All Reviews', reviews_path %></li>
              <li><%= link_to 'Log In', new_user_session_path %></li>
              <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <% end %>
      </ul>
    </div>
  </nav>
<%= yield %>

</body>
</html>
